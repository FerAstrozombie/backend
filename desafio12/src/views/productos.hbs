<div class="titulo">
    <div class="user">
        {{#if user}}
            <h2 class="mail">Bienvenido {{user}}</h2>
            <button onclick="location.href='/logout'" class="userBtn">Cerrar sesión</button>
        {{/if}}
    </div>
</div>
<div class="ordenForm">
    <h2>Ingrese Producto</h2>
    <fieldset>
        <div  class="flexForm">                
            <img src="/dibujo.svg" alt="">
            <form id="productForm" action="/productos" method="POST">
                <input class="contraseña" id="nombre" type="text" name="nombre" placeholder="Nombre" required />
                <input class="contraseña" id="descripcion" type="text" name="descripcion" placeholder="Descripcion" required />
                <input class="contraseña" id="url" type="url" name="url" placeholder="Thumbnail" required />
                <input class="contraseña" id="precio" type="number" name="precio" placeholder="Precio" required />
                <input class="contraseña" id="stock" type="number" name="stock" placeholder="Stock" required />
                <button class="botonEnviar" type="submit">Enviar</button>
            </form>  
        </div>              
    </fieldset>
    <a class="boton" href="listadeproductos">
        <button>Ir a productos</button>
    </a>
</div>
<div id="productsContainer"></div>
<div class="centroMensajes">
    <h2>Centro de Mensajes</h2>
    <form id="chatForm">
        <input type="text" id="autor" placeholder="Ingresa tu usuario" required>
        <input type="text" id="mensajeChat" placeholder="Ingrese mensaje" required />
        <button id="botonChat" type="submit">&rarr;</button>
    </form>
    <div id="chatContainer"></div>
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.min.js"></script>
<script src="socket.io/socket.io.js"></script>
<script src="main.js"></script>
