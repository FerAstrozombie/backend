<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Productos</title>
</head>
<body>
    <header>
        <%- include ("./partials/navBar.ejs") %>
    </header>
    <div class="padre">
        <h2>Ingrese Producto</h2>
        <fieldset>
            <div  class="flexForm">                
                <img src="/dibujo.svg" alt="">
                <form action="/api/productos/" method="POST">
                    <input type="text" name="title" placeholder="Title" />
                    <input type="number" name="price" placeholder="Price" />
                    <input type="url" name="url" placeholder="Thumbnail" />
                    <button>Enviar</button>
                </form>  
            </div>              
        </fieldset>
        <%if (products.length > 0) { %>
            <h2>Productos cargados</h2>
            <div class="tabla">
                <%- include ("./partials/tabla.ejs", { productos:products }) %> 
            </div>
        <% } else { %>
            <h2 class="noHay">No hay productos</h2>
        <% } %>

        <a class="boton" href="/listadeproductos">
            <button>Ir a productos</button>
        </a>
    </div>
    <%- include ("./partials/footer.ejs") %>
</body>
</html>